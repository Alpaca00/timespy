<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <!-- Права доступа -->
    <uses-permission android:name="android.permission.PACKAGE_USAGE_STATS" tools:ignore="ProtectedPermissions"/>

    <application
        android:label="time_spy"
        android:icon="@mipmap/ic_launcher"
        android:theme="@style/LaunchTheme"
        android:usesCleartextTraffic="true">
        <!-- Поддержка старого HTTP-клиента -->
        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false"/>

        <!-- Основная активити Flutter -->
        <activity
            android:label="TimeSpy"
            android:name=".MainActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:taskAffinity=""
            android:theme="@style/LaunchTheme"
            android:configChanges="orientation|keyboardHidden|keyboard|screenSize|smallestScreenSize|locale|layoutDirection|fontScale|screenLayout|density|uiMode"
            android:hardwareAccelerated="true"
            android:windowSoftInputMode="adjustResize">

            <!-- Тема, применяемая до загрузки Flutter UI -->
            <meta-data
                android:name="io.flutter.embedding.android.NormalTheme"
                android:resource="@style/NormalTheme" />

            <!-- Точка входа приложения -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- Обязательный мета-тег для Flutter -->
        <meta-data
            android:name="flutterEmbedding"
            android:value="2" />
    </application>

    <!-- Для обработки текстовых интентов -->
    <queries>
        <intent>
            <action android:name="android.intent.action.PROCESS_TEXT"/>
            <data android:mimeType="text/plain"/>
        </intent>
    </queries>
    <queries>
        <package android:name="com.android.chrome"/>
        <package android:name="com.google.android.youtube"/>
        <!-- інші пакети, які ти хочеш "бачити" -->
    </queries>
</manifest>
